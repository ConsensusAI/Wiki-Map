  <body>
    <%- include('./partials/nav.ejs') %>

    <main class="container">
      <div></div>
      <h1>New Map</h1>
      <div id="horizontal-content">
        <p>
          Click on the map to choose the starting coordinates of your new map.
        </p>
        <div id="map"></div>
      </div>
    </main>
    <style>
      .container {
        display: flex;
        flex-direction: column;
      }

      h1 {
        padding-top: 2em;
      }

      #horizontal-content {
        display: flex;
        flex-direction: column;
      }

      p {
        font-weight: 600;
      }

      #map {
        height: 650px;
        width: 1375px;
      }
    </style>
  </body>
  <script type="text/javascript" src="/scripts/newMap.js"></script>
